version: '3.3'

services:

    mariadb:
        image: mariadb:latest
        restart: always
        environment:
            MYSQL_ROOT_PASSWORD: admin@123
        volumes:
            - mariadb_vol:/var/lib/mysql
            - ./db_conf:/etc/mysql/conf.d 
        ports:
            - "3306:3306"
    redis:
        image: "redis:alpine"
        hostname: redis
        ports:
            - "6379:6379"



volumes:
    mariadb_vol:
          
