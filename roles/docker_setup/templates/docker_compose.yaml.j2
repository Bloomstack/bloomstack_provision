version: '3.3'

services:

    mariadb:
        image: mariadb:10.3
        restart: always
        environment:
            MYSQL_ROOT_PASSWORD: {{ mysql_root_pass }}
        volumes:
            - mariadb_vol:/var/lib/mysql
        command:
            - --collation-server=utf8mb4_unicode_ci
            - --character-set-server=utf8mb4
            #- --character-set-client-handshake = FALSE
        restart: always
        ports:
            - "3306:3306"
    redis:
        image: "redis:alpine"
        hostname: redis
        ports:
            - "6379:6379"
        volumes:
            - redisdata:/data
        restart: always



volumes:
    mariadb_vol:
    redisdata:
          
